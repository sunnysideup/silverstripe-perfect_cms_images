{
    "name": "sunnysideup/perfect_cms_images",
    "type": "silverstripe-vendormodule",
    "description": "Silverstripe Module that makes it easier for CMS Editors to upload the right size image. It allows the developer to set the size for each image (width, height or both) in one place and apply this throughout the project in the CMS and on the front-end.",
    "keywords": [
        "Silverstripe-CMS",
        "CMS",
        "Silverstripe",
        "Image",
        "Images",
        "Width",
        "Height",
        "Resize",
        "SVG",
        "SVG Support",
        "CMS Editing",
        "Upload Field",
        "Upload",
        "Form Field"
    ],
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Nicolaas Francken",
            "email": "modules@sunnysideup.co.nz",
            "role": "lead developer"
        }
    ],
    "require": {
        "silverstripe/recipe-cms": "^4.0 || ^5.0"
    },
    "suggests": {
        "heyday/silverstripe-hashpath": "not sure if this is still useful."
    },
    "extra": {
        "project-files-installed": [
            "app/.htaccess",
            "app/_config.php",
            "app/_config/mimevalidator.yml",
            "app/_config/mysite.yml",
            "app/src/Page.php",
            "app/src/PageController.php"
        ],
        "public-files-installed": [
            ".htaccess",
            "index.php",
            "web.config"
        ]
    },
    "autoload": {
        "psr-4": {
            "Sunnysideup\\PerfectCmsImages\\": "src/"
        }
    }
}
